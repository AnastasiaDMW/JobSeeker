<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/shadows</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.TabText</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.TabText</item>
        <item name="itemActiveIndicatorStyle">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.Title1" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.Title2" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Title3" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Title4" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Text1" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.ButtonText1" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.ButtonText2" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.TabText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.Number" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">7sp</item>
    </style>

</resources>