<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey1"
    android:layout_marginTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:background="@color/grey1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLookingNumber"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:text="Сейчас просматривает 1 человек"
                    style="@style/TextAppearance.Text1"/>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="UI/UX Designer"
                    style="@style/TextAppearance.Title3"/>

                <TextView
                    android:id="@+id/tvSalary"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="1500-2900 Br"
                    style="@style/TextAppearance.Title2"/>

                <TextView
                    android:id="@+id/tvTitleTown"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"
                    android:text="Минск"
                    style="@style/TextAppearance.Text1"/>

                <LinearLayout
                    android:id="@+id/lTowns"
                    android:layout_width="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginEnd="8dp"
                        android:text="Еком дизайн"
                        style="@style/TextAppearance.Text1"/>

                    <ImageView
                        android:id="@+id/imgVerifiedCompany"
                        android:src="@drawable/verify"
                        android:layout_width="16dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lJobExperience"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/jobIcon"
                        android:layout_width="16dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/job_experience"/>

                    <TextView
                        android:id="@+id/tvJobExperience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Опыт от 1 года до 3 лет"
                        style="@style/TextAppearance.Text1"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvDatePublic"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey3"
                    android:text="Опубликовано 20 февраля"
                    style="@style/TextAppearance.Text1"/>
                
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivIsFavorite"
                    android:src="@drawable/favorite_blue"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

            </LinearLayout>
            
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRespond"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textAllCaps="false"
            android:background="@drawable/button_respond_background"
            android:textColor="@color/white"
            style="@style/TextAppearance.ButtonText2"
            android:text="Откликнуться"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>